---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const recentGardenNotes = (await getCollection('garden'))
  .filter(note => !note.data.draft)
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf())
  .slice(0, 3);

const recentBlogPosts = (await getCollection('blog'))
  .filter(post => !post.data.draft)
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf())
  .slice(0, 3);

// Collect all unique tags from both garden and blog
const allGardenNotes = await getCollection('garden');
const allBlogPosts = await getCollection('blog');
const allContent = [...allGardenNotes, ...allBlogPosts].filter(item => !item.data.draft);
const allTags = [...new Set(allContent.flatMap(item => item.data.tags))].sort();
---

<BaseLayout title="Home - My Digital Garden">
  <div class="hero">
    <h1>Welcome to My Digital Garden</h1>
    <p class="hero-description">
      A space for growing ideas, thoughts, and knowledge. Explore my notes and blog posts.
    </p>
  </div>

  {allTags.length > 0 && (
    <div class="tags-section">
      <div class="tags-pills">
        {allTags.map(tag => (
          <span class="tag-pill">{tag}</span>
        ))}
      </div>
    </div>
  )}

  <section class="section">
    <div class="section-header">
      <h2>Recent Garden Notes</h2>
      <a href="/garden">View all →</a>
    </div>
    {recentGardenNotes.length > 0 ? (
      <div class="cards">
        {recentGardenNotes.map(note => (
          <a href={`/garden/${note.slug}`} class="card">
            <h3>{note.data.title}</h3>
            {note.data.description && <p>{note.data.description}</p>}
            <div class="meta">
              {note.data.date.toLocaleDateString('en-US', {
                year: 'numeric',
                month: 'long',
                day: 'numeric'
              })}
            </div>
            {note.data.tags.length > 0 && (
              <div class="tags">
                {note.data.tags.map(tag => (
                  <span class="tag">{tag}</span>
                ))}
              </div>
            )}
          </a>
        ))}
      </div>
    ) : (
      <p class="empty-state">No garden notes yet. Start growing your digital garden!</p>
    )}
  </section>

  <section class="section">
    <div class="section-header">
      <h2>Recent Blog Posts</h2>
      <a href="/blog">View all →</a>
    </div>
    {recentBlogPosts.length > 0 ? (
      <div class="cards">
        {recentBlogPosts.map(post => (
          <a href={`/blog/${post.slug}`} class="card">
            <h3>{post.data.title}</h3>
            <p>{post.data.description}</p>
            <div class="meta">
              {post.data.date.toLocaleDateString('en-US', {
                year: 'numeric',
                month: 'long',
                day: 'numeric'
              })}
            </div>
            {post.data.tags.length > 0 && (
              <div class="tags">
                {post.data.tags.map(tag => (
                  <span class="tag">{tag}</span>
                ))}
              </div>
            )}
          </a>
        ))}
      </div>
    ) : (
      <p class="empty-state">No blog posts yet. Check back soon!</p>
    )}
  </section>
</BaseLayout>

<style>
  .hero {
    text-align: center;
    padding: 4rem 0 3rem;
    margin-bottom: 2rem;
  }

  .hero h1 {
    margin-bottom: 1.5rem;
  }

  .hero-description {
    font-size: 1.2rem;
    color: var(--color-text-muted);
    max-width: 600px;
    margin: 0 auto;
  }

  .tags-section {
    margin-bottom: 4rem;
  }

  .tags-pills {
    display: flex;
    flex-wrap: wrap;
    gap: 0.75rem;
    justify-content: center;
    align-items: center;
  }

  .tag-pill {
    background: var(--color-hover);
    padding: 0.5rem 1rem;
    border-radius: 20px;
    font-size: 0.9rem;
    color: var(--color-text);
    border: 1px solid var(--color-border);
    transition: all 0.2s ease;
    cursor: default;
  }

  .tag-pill:hover {
    background: var(--color-border);
    transform: translateY(-1px);
  }

  .section {
    margin-bottom: 3rem;
  }

  .section-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1.5rem;
  }

  .section-header h2 {
    margin-bottom: 0;
  }

  .cards {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .card {
    display: block;
    color: var(--color-text);
  }

  .empty-state {
    color: var(--color-text-muted);
    text-align: center;
    padding: 2rem;
    font-style: italic;
  }
</style>
