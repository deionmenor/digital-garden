---
interface Props {
  title: string;
  description?: string;
}

const { title, description = "My digital garden and blog" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <nav class="nav">
      <div class="nav-container">
        <a href="/" class="nav-logo">Deion Menor</a>
        <div class="nav-links">
          <a href="/about">About</a>
          <a href="/garden">Digital Garden</a>
          <a href="/blog">Blog</a>
        </div>
      </div>
    </nav>
    <main>
      <slot />
    </main>
    <footer>
      <p>&copy; {new Date().getFullYear()} My Digital Garden</p>
    </footer>
  </body>
</html>

<style is:global>
  :root {
    /* Gruvbox Light */
    --color-bg: #fbf1c7;
    --color-text: #3c3836;
    --color-text-muted: #7c6f64;
    --color-border: #d5c4a1;
    --color-hover: #ebdbb2;
    --color-accent: #79740e;
    --color-accent-alt: #af3a03;
    --font-sans: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Oxygen', 'Ubuntu', 'Cantarell', sans-serif;
    --font-mono: 'SF Mono', 'Monaco', 'Cascadia Code', 'Roboto Mono', monospace;
    --max-width: 720px;
    --spacing: 1rem;
  }

  @media (prefers-color-scheme: dark) {
    :root {
      /* Gruvbox Dark */
      --color-bg: #282828;
      --color-text: #ebdbb2;
      --color-text-muted: #a89984;
      --color-border: #504945;
      --color-hover: #3c3836;
      --color-accent: #b8bb26;
      --color-accent-alt: #fe8019;
    }
  }

  * {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
  }

  html {
    font-family: var(--font-sans);
    background: var(--color-bg);
    color: var(--color-text);
    line-height: 1.6;
  }

  body {
    min-height: 100vh;
    display: flex;
    flex-direction: column;
  }

  main {
    flex: 1;
    width: 100%;
    max-width: var(--max-width);
    margin: 0 auto;
    padding: 2rem var(--spacing);
  }

  .nav {
    border-bottom: 1px solid var(--color-border);
    padding: 1rem var(--spacing);
    position: sticky;
    top: 0;
    background: var(--color-bg);
    z-index: 100;
  }

  .nav-container {
    max-width: var(--max-width);
    margin: 0 auto;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .nav-logo {
    font-weight: 600;
    font-size: 1.1rem;
    color: var(--color-text);
    text-decoration: none;
  }

  .nav-links {
    display: flex;
    gap: 1.5rem;
  }

  .nav-links a {
    color: var(--color-text-muted);
    text-decoration: none;
    font-size: 0.95rem;
    transition: color 0.2s;
  }

  .nav-links a:hover {
    color: var(--color-text);
  }

  footer {
    border-top: 1px solid var(--color-border);
    padding: 2rem var(--spacing);
    text-align: center;
    color: var(--color-text-muted);
    font-size: 0.9rem;
  }

  h1, h2, h3, h4, h5, h6 {
    line-height: 1.3;
    margin-bottom: 1rem;
  }

  h1 {
    font-size: 2.5rem;
    font-weight: 700;
  }

  h2 {
    font-size: 1.8rem;
    font-weight: 600;
  }

  h3 {
    font-size: 1.3rem;
    font-weight: 600;
  }

  p {
    margin-bottom: 1rem;
  }

  a {
    color: var(--color-accent);
    text-decoration: none;
  }

  a:hover {
    text-decoration: underline;
  }

  code {
    font-family: var(--font-mono);
    background: var(--color-hover);
    padding: 0.2rem 0.4rem;
    border-radius: 4px;
    font-size: 0.9em;
  }

  pre {
    background: var(--color-hover);
    padding: 1rem;
    border-radius: 8px;
    overflow-x: auto;
    margin-bottom: 1rem;
  }

  pre code {
    background: none;
    padding: 0;
  }

  .card {
    border: 1px solid var(--color-border);
    border-radius: 8px;
    padding: 1.5rem;
    margin-bottom: 1rem;
    transition: background-color 0.2s;
  }

  .card:hover {
    background: var(--color-hover);
  }

  .card h3 {
    margin-bottom: 0.5rem;
  }

  .card p {
    color: var(--color-text-muted);
    margin-bottom: 0.5rem;
  }

  .meta {
    color: var(--color-text-muted);
    font-size: 0.9rem;
  }

  .tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-top: 0.5rem;
  }

  .tag {
    background: var(--color-hover);
    padding: 0.25rem 0.75rem;
    border-radius: 16px;
    font-size: 0.85rem;
    color: var(--color-text-muted);
  }
</style>
