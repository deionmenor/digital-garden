---
import ThemeToggle from '../components/ThemeToggle.astro';

interface Props {
  title: string;
  description?: string;
}

const { title, description = "My digital garden and writings" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <script is:inline>
      // Prevent theme flash by applying theme before render
      (function() {
        const theme = localStorage.getItem('theme-preference');
        if (theme) {
          document.documentElement.setAttribute('data-theme', theme);
        } else if (window.matchMedia('(prefers-color-scheme: dark)').matches) {
          document.documentElement.setAttribute('data-theme', 'dark');
        } else {
          document.documentElement.setAttribute('data-theme', 'light');
        }
      })();
    </script>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Neuton:ital,wght@0,200;0,300;0,400;0,700;0,800;1,400&family=Noto+Serif:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
    <link href="https://assets.calendly.com/assets/external/widget.css" rel="stylesheet">
    <script src="https://assets.calendly.com/assets/external/widget.js" type="text/javascript" async></script>
    <title>{title}</title>
  </head>
  <body>
    <nav class="nav">
      <div class="nav-container">
        <a href="/" class="nav-logo">Deion Menor</a>
        <div class="nav-right">
          <div class="nav-links">
            <a href="/about">About</a>
            <a href="/garden">Digital Garden</a>
            <a href="/writings">Writings</a>
            <a href="/projects">Projects</a>
            <a href="/canvas">Canvas</a>
          </div>
          <ThemeToggle />
        </div>
      </div>
    </nav>
    <main>
      <slot />
    </main>
    <footer>
      <p>&copy; {new Date().getFullYear()} My Digital Garden</p>
    </footer>
  </body>
</html>

<style is:global>
  :root {
    /* Flexoki Light Theme */
    --color-bg: #FFFCF0;
    --color-text: #100F0F;
    --color-text-muted: #6F6E69;
    --color-border: #CECDC3;
    --color-hover: #F2F0E5;
    --color-card: #FDFDF8;
    --color-accent: #4385BE;
    --color-primary: #D14D41;
    --color-primary-rgb: 209, 77, 65;
    --color-secondary: #879A39;
    --font-sans: 'Neuton', serif;
    --font-mono: 'SF Mono', 'Monaco', 'Cascadia Code', 'Roboto Mono', monospace;
    --max-width: 720px;
    --spacing: 1rem;
  }

  [data-theme="dark"] {
    /* Flexoki Dark Theme */
    --color-bg: #100F0F;
    --color-text: #CECDC3;
    --color-text-muted: #878580;
    --color-border: #282726;
    --color-hover: #1C1B1A;
    --color-card: #141312;
    --color-accent: #4385BE;
    --color-primary: #D14D41;
    --color-primary-rgb: 209, 77, 65;
    --color-secondary: #879A39;
  }

  @media (prefers-color-scheme: dark) {
    :root:not([data-theme]) {
      /* Flexoki Dark Theme */
      --color-bg: #100F0F;
      --color-text: #CECDC3;
      --color-text-muted: #878580;
      --color-border: #282726;
      --color-hover: #1C1B1A;
      --color-card: #141312;
      --color-accent: #4385BE;
      --color-primary: #D14D41;
      --color-primary-rgb: 209, 77, 65;
      --color-secondary: #879A39;
    }
  }

  * {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
  }

  html {
    font-family: var(--font-sans);
    background: var(--color-bg);
    color: var(--color-text);
    line-height: 1.6;
    transition: background-color 0.3s ease, color 0.3s ease;
    background-image: radial-gradient(circle, var(--color-border) 1px, transparent 1px);
    background-size: 16px 16px;
  }

  body {
    min-height: 100vh;
    display: flex;
    flex-direction: column;
  }

  main {
    flex: 1;
    width: 100%;
    max-width: var(--max-width);
    margin: 0 auto;
    padding: 2rem var(--spacing);
  }

  .nav {
    border-bottom: 1px solid var(--color-border);
    padding: 1rem var(--spacing);
    position: sticky;
    top: 0;
    background: var(--color-bg);
    z-index: 100;
  }

  .nav-container {
    max-width: var(--max-width);
    margin: 0 auto;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .nav-logo {
    font-weight: 600;
    font-size: 1.1rem;
    color: var(--color-text);
    text-decoration: none;
  }

  .nav-right {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .nav-links {
    display: flex;
    gap: 1.5rem;
    align-items: center;
  }

  .nav-links a {
    color: var(--color-text-muted);
    text-decoration: none;
    font-size: 0.95rem;
    transition: color 0.2s;
  }

  .nav-links a:hover {
    color: var(--color-text);
  }

  footer {
    border-top: 1px solid var(--color-border);
    padding: 2rem var(--spacing);
    text-align: center;
    color: var(--color-text-muted);
    font-size: 0.9rem;
  }

  h1, h2, h3, h4, h5, h6 {
    line-height: 1.3;
    margin-bottom: 1rem;
  }

  h1 {
    font-size: 2.5rem;
    font-weight: 700;
  }

  h2 {
    font-size: 1.8rem;
    font-weight: 600;
  }

  h3 {
    font-size: 1.3rem;
    font-weight: 600;
  }

  p {
    margin-bottom: 1rem;
  }

  a {
    color: var(--color-accent);
    text-decoration: none;
  }

  a:hover {
    text-decoration: underline;
  }

  code {
    font-family: var(--font-mono);
    background: var(--color-hover);
    padding: 0.2rem 0.4rem;
    border-radius: 4px;
    font-size: 0.9em;
  }

  pre {
    background: var(--color-hover);
    padding: 1rem;
    border-radius: 8px;
    overflow-x: auto;
    margin-bottom: 1rem;
  }

  pre code {
    background: none;
    padding: 0;
  }

  .card {
    border: 1px solid var(--color-border);
    border-radius: 8px;
    padding: 1.5rem;
    margin-bottom: 1rem;
    transition: background-color 0.2s;
    text-decoration: none;
    background: var(--color-bg);
  }

  .card:hover {
    background: var(--color-hover);
    text-decoration: none;
  }

  .card h3 {
    margin-bottom: 0.5rem;
  }

  .card h3,
  .card p,
  .card * {
    text-decoration: none;
  }

  .card p {
    color: var(--color-text-muted);
    margin-bottom: 0.5rem;
  }

  .meta {
    color: var(--color-text-muted);
    font-size: 0.9rem;
  }

  .tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-top: 0.5rem;
  }

  .tag {
    background: var(--color-hover);
    padding: 0.25rem 0.75rem;
    border-radius: 16px;
    font-size: 0.85rem;
    color: var(--color-text-muted);
  }
</style>
